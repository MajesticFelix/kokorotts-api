# KokoroTTS API Configuration Example
# Copy this file to .env.local, .env.cloud, etc. and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_ENVIRONMENT=development

# Deployment mode: local, cloud, development
DEPLOYMENT_MODE=local

# =============================================================================
# TTS Configuration
# =============================================================================

# Text Processing
TTS_MAX_TEXT_LENGTH=50000
TTS_DEFAULT_LANGUAGE=a
TTS_CHUNK_SIZE=800
TTS_MAX_CHUNK_SIZE=1000

# Audio Settings
TTS_SAMPLE_RATE=24000
TTS_SUPPORTED_FORMATS=wav,mp3,flac,ogg,opus
TTS_DEFAULT_FORMAT=mp3

# Performance
TTS_MEMORY_LIMIT_MB=1024
TTS_BATCH_THRESHOLD=10000
TTS_ENABLE_GPU=true

# Voice Settings
TTS_VOICE_CACHE_DURATION=3600
TTS_ENABLE_VOICE_BLENDING=true
TTS_MIN_SPEED=0.25
TTS_MAX_SPEED=4.0
TTS_STREAMING_CHUNK_SIZE=600

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Settings
SECURITY_CORS_ORIGINS=*
SECURITY_CORS_CREDENTIALS=true
SECURITY_CORS_METHODS=*
SECURITY_CORS_HEADERS=*

# Request Handling
SECURITY_TRUST_PROXY_HEADERS=true
SECURITY_MAX_REQUEST_SIZE=10485760
SECURITY_REQUEST_TIMEOUT=300

# Monitoring
SECURITY_ENABLE_METRICS=true
SECURITY_ENABLE_HEALTH_CHECKS=true
SECURITY_LOG_REQUESTS=false

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMITING_ENABLED=false

# Request Limits
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=200
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Character Limits
RATE_LIMIT_MAX_CHARS_PER_REQUEST=5000
RATE_LIMIT_CHARS_PER_HOUR=50000
RATE_LIMIT_CHARS_PER_DAY=200000

# =============================================================================
# API Key Authentication (Optional)
# =============================================================================
API_KEY_AUTHENTICATION=false
API_KEY_REQUIRED=false

# API Key Rate Limits
API_KEY_REQUESTS_PER_MINUTE=100
API_KEY_REQUESTS_PER_HOUR=1000
API_KEY_REQUESTS_PER_DAY=10000
END_FILE < /dev/null
