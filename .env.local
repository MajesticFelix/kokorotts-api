# KokoroTTS API - Local Development Configuration
# No rate limiting - perfect for developers testing locally

#==========================================
# LOCAL DEVELOPMENT SETTINGS
#==========================================

RATE_LIMITING_ENABLED=false
DEPLOYMENT_MODE=local
DEBUG=true
LOG_LEVEL=DEBUG

# Development-friendly settings
MAX_TEXT_LENGTH=-1  # No limit for local development
MAX_WORKERS=2
REQUEST_TIMEOUT=600

# Open CORS for development
CORS_ORIGINS=*
TRUST_PROXY_HEADERS=true

# TTS settings
DEFAULT_LANGUAGE=a
VOICE_CACHE_DURATION=3600

# API Key Authentication (disabled for local development)
API_KEY_AUTHENTICATION=false
API_KEY_REQUIRED=false
API_KEY_DATABASE_URL=sqlite:///./api_keys.db
API_KEY_ADMIN_ENABLED=true